<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center my-3">Register</h1>
      {{>message}}
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" placeholder="Enter Name" name="name" class="form-control" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" placeholder="Enter email" name="email" class="form-control" value="{{email}}">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" placeholder="Enter password" name="password" class="form-control"
            value="{{password}}">
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" placeholder="Confirm password" name="confirmPassword"
            class="form-control" value="{{confirmPassword}}">
        </div>
        <button type="submit" class="btn btn-warning btn-block">Register</button>
        <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        Have an account?
        <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>